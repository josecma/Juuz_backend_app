model Channel {
  id      String  @id @default(uuid())
  name    String  @unique()
  type    String?
  details Json?

  users     UserChannel[]
  companies CompanyChannel[]

  @@index([name])
  @@map("channels")
}

model UserChannel {
  channelId   String   @map("channel_id")
  channel     Channel  @relation(fields: [channelId], references: [id])
  userId      String   @map("user_id")
  permissions String[]
  items       Json

  @@id([channelId, userId])
  @@map("user_channels")
}

model CompanyChannel {
  channelId   String   @map("channel_id")
  channel     Channel  @relation(fields: [channelId], references: [id])
  companyId   String   @map("company_id")
  permissions String[]

  @@id([channelId, companyId])
  @@map("company_channels")
}

model TrackingChannel {
  channelId     String   @map("channel_id")
  stakeholderId String   @map("stakeholder_id")
  permissions   String[]

  @@id([channelId, stakeholderId])
  @@map("tracking_channels")
}

model Business {
  id           String                @id @default(uuid())
  status       String
  offers       StakeholderOffer[]    @relation(name: "business_offer")
  stakeholders BusinessStakeholder[] @relation(name: "business_stakeholder")
  objects      BusinessObject[]      @relation(name: "business_object")

  @@index([status])
  @@map("businesses")
}

model BusinessObject {
  id         String @id @default(uuid())
  objectId   String @map("object_id")
  businessId String @unique @map("business_id")
  type       String
  details    Json?

  business Business @relation(name: "business_object", fields: [businessId], references: [id])

  @@index([businessId])
  @@index([objectId, businessId])
  @@map("business_objects")
}

model BusinessStakeholder {
  id            String @id @default(uuid())
  role          String
  status        String
  stakeholderId String @map("stakeholder_id")
  businessId    String @map("business_id")
  type          String
  details       Json?

  offers   StakeholderOffer[] @relation(name: "stakeholder_offer")
  business Business           @relation(name: "business_stakeholder", fields: [businessId], references: [id], onDelete: Cascade)

  @@unique([businessId, role, stakeholderId])
  @@index([role])
  @@index([stakeholderId])
  @@index([businessId, role, stakeholderId])
  @@map("business_stakeholders")
}

model StakeholderOffer {
  id         String @id @default(uuid())
  bidderId   String @map("bidder_id")
  businessId String @map("business_id")
  status     String
  type       String
  details    Json   @map("details")

  offerAt DateTime @default(now()) @map("offer_at")

  stakeholder BusinessStakeholder @relation(name: "stakeholder_offer", fields: [bidderId], references: [id])
  business    Business            @relation(name: "business_offer", fields: [businessId], references: [id])

  @@index([offerAt])
  @@index([bidderId])
  @@index([businessId])
  @@index([businessId, bidderId])
  @@map("stakeholder_offers")
}

model Criterion {
  id                   String                @id @default(uuid())
  name                 String                @unique()
  description          String?
  max                  Int                   @default(5)
  criterionMemberships CriterionMembership[]
  scores               Score[]

  @@index([name])
  @@map("criteria")
}

model CriterionSet {
  id          String  @id @default(uuid())
  name        String
  description String?
  version     Int     @default(1)

  criteria    CriterionMembership[]
  evaluations Evaluation[]

  @@unique([name, version])
  @@map("criterion_sets")
}

model DefaultSetOfCriteriaPerUserRole {
  criterionSetId String @unique()
  userRole       String @unique()

  @@unique([criterionSetId, userRole])
  @@map("default_set_of_criteria_per_user_roles")
}

model CriterionMembership {
  setId       String       @map("set_Id")
  set         CriterionSet @relation(fields: [setId], references: [id])
  criterionId String       @map("criterion_Id")
  criterion   Criterion    @relation(fields: [criterionId], references: [id])
  order       Int?

  @@id([setId, criterionId])
  @@map("criterion_set_memberships")
}

model Evaluation {
  id             String       @id @default(uuid())
  evaluatedId    String       @map("evaluated_Id")
  criterionSet   CriterionSet @relation(fields: [criterionSetId], references: [id])
  criterionSetId String       @map("criterionSet_Id")
  evaluatorId    String       @map("evaluator_Id")
  role           String       @map("role")
  scores         Score[]
  createdAt      DateTime     @default(now()) @map("created_at")

  @@map("evaluations")
}

model Score {
  id           String     @id @default(uuid())
  evaluation   Evaluation @relation(fields: [evaluationId], references: [id])
  evaluationId String     @map("evaluation_Id")
  criterion    Criterion  @relation(fields: [criterionId], references: [id])
  criterionId  String     @map("criterion_Id")
  value        Int
  comment      String?

  @@map("scores")
}

model File {
  id         String   @id @default(uuid())
  key        String   @unique()
  eTag       String   @map("e_tag")
  size       String
  mimeType   String   @map("mime_type")
  metadata   Json?
  uploadedAt DateTime @default(now()) @map("uploaded_at")

  evidenceFiles      EvidenceFile[]
  userProfilePicture UserProfilePicture?
  vehiclePictures    VehiclePicture[]

  @@index([key])
  @@map("files")
}

model VehiclePicture {
  vehicleId String  @map("vehicle_id")
  vehicle   Vehicle @relation(fields: [vehicleId], references: [id])
  fileId    String  @unique() @map("file_id")
  file      File    @relation(fields: [fileId], references: [id])

  @@id([vehicleId, fileId])
  @@index([vehicleId])
  @@map("vehicle_pictures")
}

model UserProfilePicture {
  userId String @unique() @map("user_id")
  user   User   @relation(name: "user_profile_picture", fields: [userId], references: [id])
  fileId String @unique() @map("file_id")
  file   File   @relation(fields: [fileId], references: [id])

  @@id([userId, fileId])
  @@index([userId])
  @@map("user_profile_pictures")
}

model EvidenceFile {
  id         String   @id @default(uuid())
  evidenceId String
  evidence   Evidence @relation(fields: [evidenceId], references: [id])
  fileId     String
  file       File     @relation(fields: [fileId], references: [id])

  @@unique([fileId])
  @@map("evidence_files")
}

